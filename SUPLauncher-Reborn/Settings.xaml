<Window x:Class="SUPLauncher.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SUPLauncher"
        mc:Ignorable="d"
         Title="Settings" Style="{DynamicResource roundedWindow}" Height="500" Width="460" MinHeight="270" MinWidth="460" WindowStyle="None" ResizeMode="CanResize" AllowsTransparency="True" Background="Transparent">
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="4" GlassFrameThickness="0" CaptionHeight="2"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <local:Toolbar HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
        <local:SettingsPanel></local:SettingsPanel>
    </Grid>
</Window>
